<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item android:top="0dp" android:left="2dp" android:right="2dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray"/> <!-- Shadow color -->
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/light_gray"/> <!-- Shadow color -->
            <corners android:radius="3dp"/>
        </shape>
    </item>
    <!-- Content -->
    <item android:top="3dp" android:left="2dp" android:right="2dp" android:bottom="1dp">
        <shape android:shape="rectangle">
             <!-- Content color -->
            <corners android:radius="3dp"/>
        </shape>
    </item>
</layer-list>