<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


<!-- Shadow -->
<item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="0dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/gray"/> <!-- Shadow color -->

    </shape>
</item>

<!-- Content -->
<item android:top="0dp" android:left="0dp" android:right="0dp" android:bottom="3dp">
    <shape android:shape="rectangle">
        <solid android:color="@color/blue"/> <!-- Content color -->
    </shape>
</item>

</layer-list>